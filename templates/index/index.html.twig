{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 900px; width: 100%; font: 23px/2 sans-serif;}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .footer {margin-top: 300px;  font: 20px/2 sans-serif;}
</style>
<div class="logo">
    <img src="{{ asset('recursos/logo1.jpg') }}" alt="Logo">
</div>

<div class="example-wrapper">
    <h2>Hola Bibliotecario!   </h2>
    <ul class="lista">
        <li><a href="{{ path('app_prestamo_index') }}">Prestamos</a></li>
        <li><a href="{{ path('app_cliente_index') }}">Cliente</a></li>
        <li><a href="{{ path('app_libro_index') }}">Libro</a></li>
        <li><a href="{{ path('app_autor_index') }}">Autor</a></li>
        <li><a href="{{ path('app_editorial_index') }}">Editorial</a></li>
    </ul>
</div>
<div class="footer">
        {% if app.user %}
            <div class="mb-3">
                Estas identificado como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar Sesion</a>
            </div>
        {% endif %}
</div>
{% endblock %}
