{% extends 'base.html.twig' %}

{% block title %}Autor{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Autor</h1>

        <div class="card">
            <div class="card-header">
                Lista de Autores
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for autor in autors %}
                        <tr>
                            <td>{{ autor.id }}</td>
                            <td>{{ autor.nombre }}</td>
                            <td>
                                <a href="{{ path('app_autor_show', {'id': autor.id}) }}" class="btn btn-info btn-sm">Mostrar</a>
                                <a href="{{ path('app_autor_edit', {'id': autor.id}) }}" class="btn btn-warning btn-sm">Modificar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">No se encontraron registros</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_autor_new') }}" class="btn btn-success">Registrar</a>
            <a href="{{ path('app_index') }}" class="btn btn-secondary">Volver al Inicio</a>
        </div>
    </div>
{% endblock %}
