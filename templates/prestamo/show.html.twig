{% extends 'base.html.twig' %}

{% block title %}Prestamo{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="card-title mb-0">Detalle del Préstamo</h2>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ prestamo.id }}</td>
                                </tr>
                                <tr>
                                    <th>Fecha de Préstamo</th>
                                    <td>{{ prestamo.fechaPrestamo ? prestamo.fechaPrestamo|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Fecha de Devolución</th>
                                    <td>{{ prestamo.fechaDevolucion ? prestamo.fechaDevolucion|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Observación</th>
                                    <td>{{ prestamo.observacion }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-right">
                        <a href="{{ path('app_prestamo_index') }}" class="btn btn-secondary">Volver a la Lista</a>
                        <a href="{{ path('app_prestamo_edit', {'id': prestamo.id}) }}" class="btn btn-primary">Modificar</a>
                        {{ include('prestamo/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
