{% extends 'base.html.twig' %}

{% block title %}Libro{% endblock %}

{% block body %}
    <h1>Libro</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Genero</th>
                <th>Autor</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for libro in libros %}
            <tr>
                <td>{{ libro.id }}</td>
                <td>{{ libro.nombre }}</td>
                <td>{{ libro.genero }}</td>
                <td>{{ libro.autorNombre }}</td>
                
                <td>
                    <a href="{{ path('app_libro_show', {'id': libro.id}) }}">mostrar</a>
                    <a href="{{ path('app_libro_edit', {'id': libro.id}) }}">modificar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_libro_new') }}">Registrar</a>
{% endblock %}
