{% extends 'base.html.twig' %}

{% block title %}Editorial{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4">Editorial</h1>
        </div>

        <div class="card shadow-lg mb-4">
            <div class="card-body">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Direcci√≥n</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for editorial in editorials %}
                        <tr>
                            <td>{{ editorial.id }}</td>
                            <td>{{ editorial.nombre }}</td>
                            <td>{{ editorial.direccion }}</td>
                            <td>
                                <a href="{{ path('app_editorial_show', {'id': editorial.id}) }}" class="btn btn-info btn-sm">Mostrar</a>
                                <a href="{{ path('app_editorial_edit', {'id': editorial.id}) }}" class="btn btn-warning btn-sm">Modificar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No se encontraron registros</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_editorial_new') }}" class="btn btn-success btn-lg">Registrar Nueva Editorial</a>
            <a href="{{ path('app_index') }}" class="btn btn-secondary btn-lg">Volver al Inicio</a>
        </div>
    </div>
{% endblock %}
