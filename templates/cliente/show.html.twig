{% extends 'base.html.twig' %}

{% block title %}Cliente{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4">Cliente</h1>
        </div>

        <div class="card shadow-lg mb-4">
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ cliente.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nombre</th>
                            <td>{{ cliente.nombre }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Dni</th>
                            <td>{{ cliente.dni }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Telefono</th>
                            <td>{{ cliente.telefono }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Direccion</th>
                            <td>{{ cliente.direccion }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_cliente_index') }}" class="btn btn-secondary btn-lg">Volver a la lista</a>
            <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}" class="btn btn-warning btn-lg">Modificar</a>
        </div>

        <div class="btn btn-danger mt-2">
        {{ include('cliente/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
