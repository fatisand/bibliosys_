{% extends 'base.html.twig' %}

{% block title %}Cliente{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4">Cliente</h1>
            <a href="{{ path('app_cliente_new') }}" class="btn btn-success btn-lg">Registrar Nuevo Cliente</a>
        </div>

        <div class="card shadow-lg mb-4">
            <div class="card-body p-0">
                <table class="table table-striped table-hover table-bordered mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Dni</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for cliente in clientes %}
                        <tr>
                            <td class="align-middle">{{ cliente.id }}</td>
                            <td class="align-middle">{{ cliente.nombre }}</td>
                            <td class="align-middle">{{ cliente.dni }}</td>
                            <td class="align-middle">{{ cliente.telefono }}</td>
                            <td class="align-middle">{{ cliente.direccion }}</td>
                            <td class="align-middle">
                                <a href="{{ path('app_cliente_show', {'id': cliente.id}) }}" class="btn btn-info btn-sm">Mostrar</a>
                                <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}" class="btn btn-warning btn-sm">Modificar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No se encontraron registros</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_index') }}" class="btn btn-secondary btn-lg">Volver al Inicio</a>
        </div>
    </div>
{% endblock %}
